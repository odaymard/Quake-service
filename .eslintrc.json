{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["airbnb", "prettier","eslint:recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-await-in-loop": 0,
    "eslint-disable no-restricted-globals" : true,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    
  }
}